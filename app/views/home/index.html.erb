
<div class="container">
<div class="row">

<% @artists.each do |artist| %>
  <%= link_to artist, {:controller => "artists", :action => "show"} do %>
    <div class="col-xs-12">
      <div class="artistbox colorwhite">

<div class="artistboxborder">
        <div class="artistbox_name">
          <%= artist.name%>からの距離
        </div>

        <div class="artistdistance centeredimg blinking" data-latitude="<%= artist.now_position.present? ? artist.now_position.latitude : "" %>"
             data-longitude="<%= artist.now_position.present? ? artist.now_position.longitude : "" %>">
          測定中...
        </div>

        <div class="artistupdated floatright">
          3分前に更新
        </div>
</div>
      </div>
      <div class="space10px"></div>
      <div class="space10px"></div>
    </div>
  <% end %>
<% end %>
</div>
</div>

<script type="text/javascript" charset="utf-8">
  $(function(){
    updatePosition()
  })
</script>