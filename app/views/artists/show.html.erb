<!DOCTYPE html "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8"/>
    <title>サンプル：経由地点を指定してルート案内</title>
    <script src="http://maps.google.com/maps?file=api&v=2&key=AIzaSyAKJFsi5EpC_xsb3NaAGN31wroWnk-MyXI&sensor=false"
            type="text/javascript" charset="utf-8"></script>
    <script src="maps.js" type="text/javascript"></script>
  </head>
  <body onload="initialize()" onunload="GUnload()">
    <div id="artist" data-json="#{@artist.position.to_json}"></div>
    <div id="map_canvas" style="width: 500px; height: 300px"></div>
    <script>
      var map;
      var directions;

      $(function(){
        var json = $('#artist').data('json');
        typeof(json);
      });

      function initialize() {
        if (GBrowserIsCompatible()) {
          map = new GMap2(document.getElementById("map_canvas"));
          map.setCenter(new GLatLng(35.681379,139.765577), 13);
          directions = new GDirections(map, document.getElementById('route'));
          dispRoute();
        }
      }

      function dispRoute() {
        var pointArray = [];
        directions.clear();
        for(var i = 0;i < json.length;i++){
          pointArray.push(json[0]);
        }
        directions.loadFromWaypoints(pointArray, {locale: 'ja_JP'});
      }

    </script>

    <p>位置情報を取得しています....</p>
    <div id="your_position"></div>
    <div id="area_name"></div>

  </body>
</html>
